#!/bin/bash

# Output CSV file
REPORT="pokemon_report.csv"

# Write CSV header
echo "Name,Height (m),Weight (kg)" > "$REPORT"

# Directory containing JSON files (generated from Task 2)
DATA_DIR="pokemon_data"

# Loop through each JSON file
for FILE in "$DATA_DIR"/*.json; do
  NAME=$(jq -r '.name | ascii_upcase' "$FILE")
  HEIGHT=$(jq -r '.height' "$FILE")
  WEIGHT=$(jq -r '.weight' "$FILE")

  # Convert height from decimeters to meters (divide by 10)
  HEIGHT_M=$(awk "BEGIN {printf \"%.2f\", $HEIGHT / 10}")
  
  # Convert weight from hectograms to kilograms (divide by 10)
  WEIGHT_KG=$(awk "BEGIN {printf \"%.2f\", $WEIGHT / 10}")

  # Write to CSV
  echo "$NAME,$HEIGHT_M,$WEIGHT_KG" >> "$REPORT"
done

# Print confirmation
echo -e "\nCSV Report generated at: $REPORT"
cat "$REPORT"

# Calculate average height and weight using awk
awk -F, '
  NR > 1 {
    total_height += $2
    total_weight += $3
    count++
  }
  END {
    printf "\nAverage Height: %.2f m\n", total_height / count
    printf "Average Weight: %.2f kg\n", total_weight / count
  }
' "$REPORT"
